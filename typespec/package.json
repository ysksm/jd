{
  "name": "@jira-db/typespec",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build:emitters": "pnpm --filter @jira-db/emitter-common run build && pnpm --filter @jira-db/emit-rust run build && pnpm --filter @jira-db/emit-tauri run build && pnpm --filter @jira-db/emit-angular run build",
    "build": "pnpm run build:emitters && tsp compile .",
    "watch": "tsp compile . --watch",
    "format": "tsp format **/*.tsp"
  },
  "dependencies": {
    "@typespec/compiler": "^0.62.0",
    "@jira-db/emitter-common": "file:./emitters/common",
    "@jira-db/emit-rust": "file:./emitters/emit-rust",
    "@jira-db/emit-tauri": "file:./emitters/emit-tauri",
    "@jira-db/emit-angular": "file:./emitters/emit-angular"
  },
  "devDependencies": {
    "typescript": "^5.6.0"
  }
}
