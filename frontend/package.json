{
  "name": "jira-db-frontend",
  "version": "0.0.0",
  "description": "Shared Angular frontend for JiraDB (Web and Tauri)",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:web": "ng serve --configuration=web-dev",
    "build": "ng build",
    "build:web": "ng build --configuration=web",
    "build:tauri": "ng build --configuration=tauri",
    "watch": "ng build --watch --configuration development",
    "watch:web": "ng build --watch --configuration=web-dev",
    "watch:tauri": "ng build --watch --configuration=tauri-dev",
    "test": "ng test"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.4",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@tauri-apps/api": "^2.9.1",
    "echarts": "^6.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uplot": "^1.6.32"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "typescript": "~5.9.2"
  }
}
